
CREATE TABLE USERS
(
IDUSER INT NOT NULL AUTO_INCREMENT,
NMUSER VARCHAR(255),
PSWDUSER VARCHAR(255),
PRIMARY KEY (IDUSER)
);


CREATE TABLE IMAGEM
(
IDIMAGEM INT NOT NULL AUTO_INCREMENT,
IDUSER INT NOT NULL,
RATINGIMAGEM INT,
PRIMARY KEY (IDIMAGEM),
FOREIGN KEY (IDUSER) REFERENCES Users(IDUSER)
);

CREATE TABLE IMAGECOMPOSITION
(
IDCOMP INT NOT NULL AUTO_INCREMENT,
IDIMAGEM INT NOT NULL,
XPOSITION INT,
YPOSITION INT,
HASDRAG BIT(1),
PRIMARY KEY (IDCOMP, IDIMAGEM),
FOREIGN KEY (IDIMAGEM) REFERENCES IMAGEM(IDIMAGEM)
);
